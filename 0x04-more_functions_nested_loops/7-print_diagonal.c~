#include "holberton.h"
/**
 *more_numbers - show numbers
 *Return: valve 0
 */
void print_diagonal(int n)
{
  int i;
  int a;

  if(n <= 0)
    {
      _putchar(' ');
    }  
  for (i = 0; i < n; i++)
    {
      for (a = 0; a <= i; a++)
      {
	if (a == i)
	  {
	_putchar(92);
	  _putchar('\n');
	}
      
	else 
      {
	_putchar(' ');
      
      }
       
  }
    }    

}
